<div class='container'>  

  <%= form_with model: post do |f| %>
    <div class="form-inputs">
      <%= f.label :Titre, class:'form-control' %>
      <%= f.text_field :title, class:'form-control string' %>
      <br/>
      <%= f.label :Image, class:'form-control' %>
      <%= f.file_field :thumbnail %>
      <br/><br/>
      <%= f.label :Cover, class:'form-control' %>
      <%= f.file_field :banner %>
      <br/><br/>
      <div style="margin:1em">
        <%= f.rich_text_area :body %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>